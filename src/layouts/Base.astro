---
// Base layout with header/footer and global styles
const { setter } = Astro.props;
const emailLink = setter?.email_link ?? "mailto:hola@doubletres.com";
const emailText = setter?.email ?? "hola@doubletres.com";
const linkedinLink = setter?.linkedin ?? "https://linkedin.com/company/doubletres";
const instagramLink = setter?.instagram ?? "https://instagram.com/doubletres";
const facebookLink = setter?.facebook ?? null;
const phone = setter?.phone ?? null;
const whatsappLink = setter?.whatsapp_link ?? null;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="description" content="DoubleTres - Soluciones digitales a medida para tu negocio" />
    <title>DoubleTres — Soluciones Digitales</title>
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script type="module">import 'iconify-icon';</script>
  </head>
  <body>
    <header class="site-header ">
      <div class="container header-inner">
        <a href="https://doubletres.com" class="logo">
          <img 
            src="https://doubletres.com/web/image/website/1/logo/Double%20Tres?unique=3432801" 
            alt="Double Tres" 
            class="logo-image"
            width="150"
            height="28"
          />
        </a>
        <nav class="nav">

          <a href="#contacto" class="btn secondary">Contacto</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-logo">
            <img 
              src="https://doubletres.com/web/image/1148-7779236b/logo.webp" 
              alt="Double Tres" 

            />
            <p>Transformamos ideas en soluciones digitales excepcionales.</p>
          </div>
          <div class="footer-links">
            <div class="footer-column">
              <h3>Empresa</h3>
              <a href="#nosotros">Sobre Nosotros</a>
              <a href="#equipo">Equipo</a>
              <a href="#trabajos">Trabaja con Nosotros</a>
            </div>
            <div class="footer-column">
              <h3>Servicios</h3>
              <a href="#desarrollo">Desarrollo Web</a>
              <a href="#diseno">Diseño UI/UX</a>
              <a href="#marketing">Marketing Digital</a>
            </div>
            <div class="footer-column">
              <h3 id="contacto">Contacto</h3>
              <a href={emailLink}>{emailText}</a>
              {phone && (<a href={`tel:${phone.replace(/\s|\+/g, '')}`}>{phone}</a>)}
              <div class="social-links">
                <a href={linkedinLink} target="_blank" rel="noopener" aria-label="LinkedIn">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="social-icon" aria-hidden="true">
                    <path fill="currentColor" d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z"></path>
                  </svg>
                  <span class="sr-only">LinkedIn</span>
                </a>
                <a href={instagramLink} target="_blank" rel="noopener" aria-label="Instagram">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 50 50" class="social-icon" aria-hidden="true">
                    <path fill="currentColor" d="M 16 3 C 8.8324839 3 3 8.8324839 3 16 L 3 34 C 3 41.167516 8.8324839 47 16 47 L 34 47 C 41.167516 47 47 41.167516 47 34 L 47 16 C 47 8.8324839 41.167516 3 34 3 L 16 3 z M 16 5 L 34 5 C 40.086484 5 45 9.9135161 45 16 L 45 34 C 45 40.086484 40.086484 45 34 45 L 16 45 C 9.9135161 45 5 40.086484 5 34 L 5 16 C 5 9.9135161 9.9135161 5 16 5 z M 37 11 A 2 2 0 0 0 35 13 A 2 2 0 0 0 37 15 A 2 2 0 0 0 39 13 A 2 2 0 0 0 37 11 z M 25 14 C 18.936712 14 14 18.936712 14 25 C 14 31.063288 18.936712 36 25 36 C 31.063288 36 36 31.063288 36 25 C 36 18.936712 31.063288 14 25 14 z M 25 16 C 29.982407 16 34 20.017593 34 25 C 34 29.982407 29.982407 34 25 34 C 20.017593 34 16 29.982407 16 25 C 16 20.017593 20.017593 16 25 16 z"/>
                  </svg>
                  <span class="sr-only">Instagram</span>
                </a>
                {facebookLink && (
                  <a href={facebookLink} target="_blank" rel="noopener" aria-label="Facebook">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" class="social-icon" aria-hidden="true">
                      <path fill="currentColor" d="M80 299.3V512H196V299.3h86.5l18-97.8H196V166.9c0-51.7 20.3-71.5 72.7-71.5c16.3 0 29.4 .4 37 1.2V7.9C291.4 4 256.4 0 236.2 0C129.3 0 80 50.5 80 159.4v42.1H14v97.8H80z"></path>
                    </svg>
                    <span class="sr-only">Facebook</span>
                  </a>
                )}
                {whatsappLink && (
                  <a href={whatsappLink} target="_blank" rel="noopener" aria-label="WhatsApp">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="social-icon" aria-hidden="true">
                      <path fill="currentColor" d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 56.2 81.2 56.1 130.5 0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7.9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"></path>
                    </svg>
                    <span class="sr-only">WhatsApp</span>
                  </a>
                )}
              </div>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>  {new Date().getFullYear()} DoubleTres. Todos los derechos reservados.</p>
          <div class="legal-links">
            <a href="#privacidad">Política de Privacidad</a>
            <a href="#terminos">Términos de Servicio</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
